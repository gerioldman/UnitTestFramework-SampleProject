{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "x86_x64 UnitTest",
            "cwd": "${workspaceFolder}",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/.obj/unittest_x86_x64/main.exe",
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "args": [
                "-a",
                "--colour",
                "-s"
            ],
            "preLaunchTask": "x86_x64 Build UnitTest"
        },
        {
            "name": "Target UnitTest",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "executable": "./.obj/unittest_platform/unittest_platform.elf",
            "servertype": "jlink",
            "serialNumber": "",
            "device": "STM32F446RE",
            "interface": "swd",
            "runToEntryPoint": "main",
            "gdbPath": "C:\\ST\\STM32CubeIDE_1.7.0\\STM32CubeIDE\\plugins\\com.st.stm32cube.ide.mcu.externaltools.gnu-tools-for-stm32.10.3-2021.10.win32_1.0.0.202111181127\\tools\\bin\\arm-none-eabi-gdb.exe",
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 100000000,
                "swoFrequency": 2000000,
                "source": "probe",
                "decoders": [
                    {
                        "port": 0,
                        "type": "console",
                        "label": "ITM Console"
                    }
                ]
            },
            "showDevDebugOutput": "none",
            "preLaunchTask": "Target Build UnitTest"
        },
        {
            "name": "Target Software",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "executable": "./.obj/Platform/platform.elf",
            "servertype": "jlink",
            "serialNumber": "",
            "device": "STM32F446RE",
            "interface": "swd",
            "runToEntryPoint": "main",
            "gdbPath": "C:\\ST\\STM32CubeIDE_1.7.0\\STM32CubeIDE\\plugins\\com.st.stm32cube.ide.mcu.externaltools.gnu-tools-for-stm32.10.3-2021.10.win32_1.0.0.202111181127\\tools\\bin\\arm-none-eabi-gdb.exe",
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 100000000,
                "swoFrequency": 2000000,
                "source": "probe",
                "decoders": [
                    {
                        "port": 0,
                        "type": "console",
                        "label": "ITM Console"
                    }
                ]
            },
            "showDevDebugOutput": "none",
            "preLaunchTask": "Software build"
        }
    ]
}